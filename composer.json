{
	"name": "wikimedia/zest-css",
	"description": "Fast, lightweight, extensible CSS selector engine for PHP",
	"keywords": [
		"css",
		"selector",
		"engine"
	],
	"license": "MIT",
	"homepage": "https://www.mediawiki.org/wiki/Zest",
	"authors": [
		{
			"name": "Christopher Jeffrey"
		},
		{
			"name": "C. Scott Ananian",
			"email": "cananian@wikimedia.org",
			"homepage": "https://cscott.net"
		}
	],
	"require": {
		"php": ">=8.1",
		"ext-mbstring": "*",
		"ext-xml": "*"
	},
	"suggest": {
		"ext-intl": "*"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "48.0.0",
		"mediawiki/mediawiki-phan-config": "0.17.0",
		"mediawiki/minus-x": "1.1.3",
		"ockcyp/covers-validator": "1.6.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"phpunit/phpunit": "9.6.21",
		"wikimedia/remex-html": "^5.1.0",
		"wikimedia/testing-access-wrapper": "^3.0",
		"wikimedia/update-history": "^1.0.1"
	},
	"autoload": {
		"psr-4": {
			"Wikimedia\\Zest\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wikimedia\\Zest\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"@phan",
			"covers-validator",
			"@phpcs",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"update-history": "update-history patch",
		"phan": "phan --allow-polyfill-parser",
		"phpcs": "phpcs -sp"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
